- Form = React.createFactory(require('../../commons/ajax-form.coffee'))
- i18n = require('../../i18n.coffee')
.create-report.page
	span(class='error-message')= this.state.error
	Form(action='/reports', method='post', ref='form', onSubmit = this.submit, onResponse = this.onResponse)
		dl
			dd
				label= i18n('reportName')
				input(name='name', required=true, maxLength=10)
			dd
				label= i18n('description')
				textarea(name='description')
		input(type='submit', value='submit')