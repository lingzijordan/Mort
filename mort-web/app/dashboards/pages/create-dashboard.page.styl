.create-dashboard.page
	background #fff
	padding 4em
	height 100%
	overflow auto
	box-sizing border-box
	input
	select
		font-size 1rem
		text-indent .4em
		border 0
		width 100%
		background rgb(248,248,248)
		&:not([type='submit'])
			height 2rem
			padding 0
	input[type='submit']
		fixed bottom 4px right 1em
		z-index 100
		color #fff
		font-size 14px
		border 3px solid
		cursor pointer
		padding .4em 1em;
		border-radius 10px/20px;
		background #7986cb;
		color #fff;
		transition all 0.3s
		&:hover
			background steelblue*1.1
			transition background-color 0.1s 0.3s, color 0.1s 0.3s;
			color #ECEFF1;
			background-color #3f51b5;
			animation: moema 0.3s forwards;
	textarea
		font-size 1rem
		text-indent .4em
		border 0
		width 100%
		height 70px
		background rgb(248,248,248)