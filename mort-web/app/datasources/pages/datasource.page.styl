.datasource.page
	width 100%
	padding-left 1em
	box-sizing border-box
	height 100%
	background #fffce1
	animation page-enter .1s
	&.exit
		animation page-exit .4s
		
@keyframes page-enter
	0% {
		transform scale(.91)
	}
	100%{
		transform scale(1)
	}
	
@keyframes page-exit
	0% {
		transform scale(1)
	}
	100%{
		transform scale(.91)
		
	}