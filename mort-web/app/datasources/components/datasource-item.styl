	label
		relative top left
		display block
		padding 1em 2.1em 1em 3em
		text-align left
		color inherit
		text-decoration none
		cursor pointer
		&:hover
			.show-preview
				opacity 1
	.show-preview
		opacity 0
		&:hover
			outline 1px solid
		transition all .4s ease
		text-align right

	.choose-datasource-item
		width 0
		height 0
		fixed top
		opacity 0
		pointer-events none
		&:checked
			& ~ label
				background #c94e50
				color #fff

	svg
		absolute top left
		&.transition
			transition all .2s
		&.expand
			fixed top 64px left 0 right 0 bottom 40px
			z-index 1000
			top 64px !important
			left 0 !important
			width 100vw !important
			height calc(100vh - 64px) !important
			//path
			//	fill rgba(255,255,255,0)
		&.expand-normal
			fixed top 64px left 0 right 0
			z-index 1000
			top 64px
			left 0
			width 100vw
			height calc(100vh - 64px)
			&.transition
				transition all .25s
		path
			fill #fff
			transition fill .5s	linear .5s
@keyframes waveAction
	0% {
		transform: translate(-150px, 0);
	}
	100% {
		transform: translate(0, 0);
	}