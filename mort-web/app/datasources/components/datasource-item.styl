.datasource-item
	relative top left
	margin 0 1em 2.5em
	min-width 250px
	text-align center
	display block
	vertical-align top
	font-size 1.2rem
	color #4e4a46
	&:hover
		color #c94e50
	&.active
		label
			transition all .1s
			opacity 0
				
	a
		relative top left
		display block
		width 100%
		color inherit
		text-decoration none
	
	.progress-num
		absolute top right 2em
		color #2980b9
		line-height 3.6
		font-weight bold
		pointer-events none

