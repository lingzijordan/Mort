.add-frame
	absolute top 0
	margin 0 auto
	height 100%
	height 100vh
	height calc(100vh - 64px - 40px)
	width 100%
	box-sizing border-box
	transition all .4s ease
	
	h2
		margin 0
		text-indent 1rem
		transition all .4s ease
	table
		margin 0 auto
	// .datasource-editor
	// 	display flex
	// 	width 100%
	// 	min-height 100%
	// 	align-items center
	// 	justify-content center
		
.editor
	height 100%
	overflow auto
	box-sizing border-box
	dl
	dd
		margin 0
		padding 0
	dd	
		margin-bottom 1em
	form
		padding 1em 4em
		max-width 100%
		max-height: 100%;
		overflow: auto
		box-sizing border-box
		absolute bottom 0
		margin 0
		border-radius 0 5px 0 0 
		background cornsilk
	td
		text-align right
		line-height 3
	tr
		transition all .4s
		&.error
			color orange
	input
	textarea
	select
		font-size 1rem
		text-indent .4em
		border 1px solid steelblue
		background rgb(248,248,248)
		border-bottom 1px solid steelblue
		outline 0
		&:not([type='submit'])
			height 2rem
			padding 0
			width 100%
			
	input[type='submit']
		fixed bottom 4px left 50%
		z-index 100		
		color #fff
		font-size 14px
		border 3px solid
		cursor pointer
		padding: .4em 1em;
		border-radius: 10px/20px;
		background: #7986cb;
		color: #fff;
		transition all 0.3s
		&:hover
			background steelblue*1.1
			transition: all 0.1s// 0.3s, color 0.1s 0.3s;
			color: #ECEFF1;
			background-color: #3f51b5;
			//animation: moema 0.3s forwards;
	.hide
		display none		
		
@keyframes moema
	60% {
		transform: scale3d(0.8, 0.8, 1);
	}
	85% {
		transform: scale3d(1.1, 1.1, 1);
	}
	100% {
		transform: scale3d(1, 1, 1);
	}